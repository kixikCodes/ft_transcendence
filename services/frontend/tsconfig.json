{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "ES2020", 
	  "moduleResolution": "node",
	  "lib": ["ES2020", "DOM", "DOM.Iterable"],
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "allowSyntheticDefaultImports": true,
	  "resolveJsonModule": true,
	  "sourceMap": true
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules",
	  "dist"
	]
  }